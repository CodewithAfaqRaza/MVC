    <ul>
      {% for error in errors %}
        <li class="error">{{ error }}</li>
      {% endfor %}
    </ul>
  {% endif %}

  <form action="/student/process" method="post">
    <label for="name">Name</label>
    <input type="text" name="name" />
    <label for="fathername">Father Name</label>
    <input type="text" name="fathername" />
