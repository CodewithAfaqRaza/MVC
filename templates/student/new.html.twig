    <label for="hobby">Hobby</label>
    <input type="text" name="hobby" />
    <input type="hidden" name="_token" value="{{ csrf_token }}" />
    <button type="submit">Submit</button>
  </form>
  <a href="/student/all">All Student</a>
{% endblock %}
